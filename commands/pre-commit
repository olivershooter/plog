#!/bin/bash

# Protect master from accidental commits.
echo -e "===\n>> Talenavi Pre-commit Hook:: Checking branch name..."
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'main' ]
then
  echo -e "\nðŸš« Commit directly to main branch is not allowed!\n" && exit 1
fi

if [ $branchName == 'develop' ]
then
  echo -e "\nðŸš« Cannot push to remote develop branch, please create your own branch and use PR.\n" && exit 1
fi

if [[ $branchName = *[![:ascii:]]* ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name.\n" && exit 1
fi

if [[ $branchName =~ [A-Z] ]]
then
  echo -e "\nðŸš« Branch name should not have any ascii and upper case letters, please rename your branch name.\n" && exit 1
fi

echo -e ">> Finish checking branch name\n==="

exit 0
